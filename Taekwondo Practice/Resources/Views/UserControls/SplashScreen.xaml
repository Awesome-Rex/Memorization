<UserControl x:Class="Practice_Dojang.Resources.Views.UserControls.SplashScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Practice_Dojang.Resources.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1200"
             
            DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Name="Background">
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="100"/>
        </Grid.Background>

        <Image Source="{Binding image}" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="{Binding imageOffset.X}" Y="{Binding imageOffset.Y}"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Grid Name="Overlay">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.01"/>
            </Grid.Background>
        </Grid>
    </Grid>
</UserControl>
