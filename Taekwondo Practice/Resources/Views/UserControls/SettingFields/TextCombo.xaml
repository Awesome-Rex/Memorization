<UserControl x:Class="Practice_Dojang.Resources.Scripts.Views.UserControls.SettingFields.TextCombo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Practice_Dojang.Resources.Scripts.Views.UserControls.SettingFields"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300"
             
             Name="this"
             
             Height="Auto" HorizontalAlignment="Stretch" Margin="0,0,0,15">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--<Label Grid.Column="0" FontSize="{Binding FontSize}" Content="{Binding Text}"/>-->
        <ContentPresenter Grid.Column="0" Content="{Binding Info, ElementName=this}"/>
        <ContentPresenter Grid.Column="1" Content="{Binding Box, ElementName=this}"/>
    </Grid>
</UserControl>
